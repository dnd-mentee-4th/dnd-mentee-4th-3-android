<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="232dp"
    android:layout_height="120dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/attention_member_button"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <ImageView
        android:id="@+id/main_attention_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/attentionimagegreenview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_attentionproject_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:inputType="textMultiLine"
        android:text="두줄일 때는 이렇게\n들어간다"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_attention_imageview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_attentionproject_recruitment_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/visibletext"
        android:text="모집 포지션"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_attention_imageview" />

    <TextView
        android:id="@+id/main_inputattentionproject_position_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/colorBlack"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/main_attentionproject_recruitment_textview"
        app:layout_constraintTop_toBottomOf="@+id/main_attention_imageview" />

    <HorizontalScrollView
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_attentionproject_recruitment_textview">


        <LinearLayout
            android:id="@+id/main_attention_scrollview_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            />


    </HorizontalScrollView>

    <ImageView
        android:id="@+id/main_attentionitem_image"
        android:layout_width="25dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_attention_imageview"
        app:layout_constraintEnd_toEndOf="@+id/main_attention_imageview"
        app:layout_constraintStart_toStartOf="@+id/main_attention_imageview"
        app:layout_constraintTop_toTopOf="@+id/main_attention_imageview"
        app:srcCompat="@drawable/bugger" />


</androidx.constraintlayout.widget.ConstraintLayout>
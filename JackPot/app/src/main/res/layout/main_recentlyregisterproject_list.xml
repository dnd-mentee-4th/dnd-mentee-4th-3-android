<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/main_recentlyproject_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="280dp"
        android:background="@drawable/attentionimagepinkview"
        app:layout_constraintBottom_toBottomOf="@+id/main_recentlytime_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_recentlytitle_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:singleLine="true"
        android:text="제목"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/main_recentlyproject_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_recruitment_position_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:text="모집 포지션"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/main_recentlyproject_image"
        app:layout_constraintTop_toBottomOf="@+id/main_recentlytitle_textview" />

    <TextView
        android:id="@+id/main_inputrecentlyproject_position_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="개발자"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/main_recruitment_position_textview"
        app:layout_constraintTop_toBottomOf="@+id/main_recentlytitle_textview" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        app:layout_constraintStart_toEndOf="@+id/main_recentlyproject_image"
        app:layout_constraintTop_toBottomOf="@+id/main_recruitment_position_textview">


        <LinearLayout
            android:id="@+id/main_recentlyregister_scrollview_textview"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" />


    </HorizontalScrollView>

    <TextView
        android:id="@+id/main_recentlytime_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="10분전"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/horizontalScrollView"
        app:layout_constraintTop_toBottomOf="@+id/main_inputrecentlyproject_position_textview" />

    <ImageView
        android:id="@+id/main_recentlyregister_field_image"
        android:layout_width="24dp"
        android:layout_height="23dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_recentlyproject_image"
        app:layout_constraintEnd_toEndOf="@+id/main_recentlyproject_image"
        app:layout_constraintStart_toStartOf="@+id/main_recentlyproject_image"
        app:layout_constraintTop_toTopOf="@+id/main_recentlyproject_image"
        app:srcCompat="@drawable/field_health" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/edit_line"
        android:gravity="bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_recentlytime_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>
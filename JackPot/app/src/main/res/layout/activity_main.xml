            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_attention_constraintlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_hobby_textview4">

                <TextView
                    android:id="@+id/main_projectattention_button"
                    android:layout_width="139dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="24dp"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="주목받는 프로젝트"
                    android:textColor="@color/colorbrightly"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/main_attentionprojectline_textview"
                    android:layout_width="139dp"
                    android:layout_height="3dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/page_line_background_select"
                    app:layout_constraintBottom_toBottomOf="parent"

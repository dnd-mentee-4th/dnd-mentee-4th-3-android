<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thisteampl.jackpot.main.MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!-- 참고 웹 주소 : https://re-build.tistory.com/31 -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="#F4F2F2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/main_title_imageview"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/title_view_table"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/main_appname_textview"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/jackpot_logo_title"
                app:layout_constraintStart_toStartOf="@+id/main_title_imageview"
                app:layout_constraintTop_toTopOf="@+id/main_title_imageview"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/main_search_imageview"
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toStartOf="@+id/main_bell_imageview"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/jackpot_search" />

            <ImageView
                android:id="@+id/main_mypage_imageview"
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/jackpot_user" />

            <ImageView
                android:id="@+id/main_bell_imageview"
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toStartOf="@+id/main_mypage_imageview"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/jackpot_bell" />

            <TextView
                android:id="@+id/main_field_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="분야"
                android:textColor="#111111"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_title_imageview" />


            <ImageView
                android:id="@+id/main_selftdevelopment_imgbtn"
                android:layout_width="55dp"
                android:layout_height="55dp"

                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:src="@drawable/circle_imageview"
                app:layout_constraintEnd_toStartOf="@+id/main_hobby_imgbtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_field_textview" />

            <ImageView
                android:id="@+id/main_selfdevelopment_imageview"
                android:layout_width="30dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/main_selftdevelopment_imgbtn"
                app:layout_constraintEnd_toEndOf="@+id/main_selftdevelopment_imgbtn"
                app:layout_constraintStart_toStartOf="@+id/main_selftdevelopment_imgbtn"
                app:layout_constraintTop_toTopOf="@+id/main_selftdevelopment_imgbtn"
                app:srcCompat="@drawable/field_self_development" />

            <TextView
                android:id="@+id/main_selfdevelopment_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="65dp"
                android:text="자기계발"
                android:textColor="#111111"
                android:textSize="11dp"
                app:layout_constraintEnd_toStartOf="@+id/main_hobby_textview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_selftdevelopment_imgbtn" />


            <ImageView
                android:id="@+id/main_hobby_imgbtn"
                android:layout_width="55dp"
                android:layout_height="55dp"

                android:layout_marginTop="20dp"
                android:layout_marginEnd="90dp"
                android:src="@drawable/circle_imageview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_field_textview" />


            <TextView
                android:id="@+id/main_hobby_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="90dp"
                android:text="취미"
                android:textColor="#111111"
                android:textSize="11dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_hobby_imgbtn" />


            <TextView
                android:id="@+id/main_hobby_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:text="경제"
                android:textColor="#111111"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_economy_imgbtn" />

            <TextView
                android:id="@+id/main_hobby_textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="60dp"
                android:text="IT"
                android:textColor="#111111"
                android:textSize="11dp"
                app:layout_constraintEnd_toStartOf="@+id/main_hobby_textview5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_it_imgbtn" />

            <TextView
                android:id="@+id/main_hobby_textview5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="90dp"
                android:text="예술/장착"
                android:textColor="#111111"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_art_imgbtn" />

            <TextView
                android:id="@+id/main_hobby_textview6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:text="건강"
                android:textColor="#111111"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_health_imgbtn" />

            <TextView
                android:id="@+id/main_hobby_textview7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginEnd="50dp"
                android:text="휴식"
                android:textColor="#111111"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/main_hobby_textview6"
                app:layout_constraintTop_toBottomOf="@+id/main_repose_imgbtn" />

            <TextView
                android:id="@+id/main_hobby_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginEnd="50dp"
                android:text="요리"
                android:textColor="#111111"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/main_hobby_textview2"
                app:layout_constraintTop_toBottomOf="@+id/main_cook_imgbtn" />

            <ImageView
                android:id="@+id/main_economy_imgbtn"
                android:layout_width="55dp"
                android:layout_height="55dp"

                android:layout_marginStart="90dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/circle_imageview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_field_textview" />

            <ImageView
                android:id="@+id/main_health_imgbtn"
                android:layout_width="55dp"
                android:layout_height="55dp"

                android:layout_marginStart="90dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/circle_imageview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_hobby_textview2" />

            <ImageView
                android:id="@+id/main_repose_imgbtn"
                android:layout_width="55dp"
                android:layout_height="55dp"

                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="50dp"
                android:src="@drawable/circle_imageview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/main_health_imgbtn"
                app:layout_constraintTop_toBottomOf="@+id/main_hobby_textview3" />

            <ImageView
                android:id="@+id/main_cook_imgbtn"
                android:layout_width="55dp"
                android:layout_height="55dp"

                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:src="@drawable/circle_imageview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/main_economy_imgbtn"
                app:layout_constraintTop_toBottomOf="@+id/main_field_textview" />

            <ImageView
                android:id="@+id/main_it_imgbtn"
                android:layout_width="55dp"
                android:layout_height="55dp"

                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="50dp"
                android:src="@drawable/circle_imageview"
                app:layout_constraintEnd_toStartOf="@+id/main_art_imgbtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_selfdevelopment_textview" />


            <ImageView
                android:id="@+id/main_art_imgbtn"
                android:layout_width="55dp"
                android:layout_height="55dp"

                android:layout_marginTop="15dp"
                android:layout_marginEnd="90dp"
                android:src="@drawable/circle_imageview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_hobby_textview" />

            <ImageView
                android:id="@+id/main_hobby_imageview"
                android:layout_width="30dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/main_hobby_imgbtn"
                app:layout_constraintEnd_toEndOf="@+id/main_hobby_imgbtn"
                app:layout_constraintStart_toStartOf="@+id/main_hobby_imgbtn"
                app:layout_constraintTop_toTopOf="@+id/main_hobby_imgbtn"
                app:srcCompat="@drawable/field_hobby" />

            <ImageView
                android:id="@+id/main_health_imageveiw"
                android:layout_width="30dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toTopOf="@+id/main_hobby_textview6"
                app:layout_constraintEnd_toEndOf="@+id/main_health_imgbtn"
                app:layout_constraintStart_toStartOf="@+id/main_health_imgbtn"
                app:layout_constraintTop_toTopOf="@+id/main_health_imgbtn"
                app:srcCompat="@drawable/field_health" />

            <ImageView
                android:id="@+id/main_cook_imageview"
                android:layout_width="30dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/main_cook_imgbtn"
                app:layout_constraintEnd_toEndOf="@+id/main_cook_imgbtn"
                app:layout_constraintStart_toStartOf="@+id/main_cook_imgbtn"
                app:layout_constraintTop_toTopOf="@+id/main_cook_imgbtn"
                app:srcCompat="@drawable/field_cook" />

            <ImageView
                android:id="@+id/main_it_imageview"
                android:layout_width="30dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/main_it_imgbtn"
                app:layout_constraintEnd_toEndOf="@+id/main_it_imgbtn"
                app:layout_constraintStart_toStartOf="@+id/main_it_imgbtn"
                app:layout_constraintTop_toTopOf="@+id/main_it_imgbtn"
                app:srcCompat="@drawable/field_it" />

            <ImageView
                android:id="@+id/main_art_imageview"
                android:layout_width="30dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/main_art_imgbtn"
                app:layout_constraintEnd_toEndOf="@+id/main_art_imgbtn"
                app:layout_constraintStart_toStartOf="@+id/main_art_imgbtn"
                app:layout_constraintTop_toTopOf="@+id/main_art_imgbtn"
                app:srcCompat="@drawable/field_art" />

            <ImageView
                android:id="@+id/main_economy_imageview"
                android:layout_width="30dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/main_economy_imgbtn"
                app:layout_constraintEnd_toEndOf="@+id/main_economy_imgbtn"
                app:layout_constraintStart_toStartOf="@+id/main_economy_imgbtn"
                app:layout_constraintTop_toTopOf="@+id/main_economy_imgbtn"
                app:srcCompat="@drawable/field_economy" />

            <ImageView
                android:id="@+id/main_repose_imageview"
                android:layout_width="30dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toTopOf="@+id/main_hobby_textview7"
                app:layout_constraintEnd_toEndOf="@+id/main_repose_imgbtn"
                app:layout_constraintStart_toStartOf="@+id/main_repose_imgbtn"
                app:layout_constraintTop_toTopOf="@+id/main_repose_imgbtn"
                app:srcCompat="@drawable/field_repose" />


            <RelativeLayout
                android:id="@+id/main_relativelayout3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/main_hobby_textview4"
                app:layout_constraintTop_toBottomOf="@+id/main_hobby_textview4">

                <FrameLayout
                    android:id="@+id/main_projectview_framelayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/main_relativelayout1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/main_relativelayout3"
                app:layout_constraintTop_toBottomOf="@+id/main_relativelayout3">

                <FrameLayout
                    android:id="@+id/main_projectview_framelayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/appeal_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/drawproject_fab"
            android:layout_alignParentRight="true"
            android:backgroundTint="#ffffff"
            android:src="@drawable/android_appeal"
            android:visibility="invisible"
            android:layout_marginRight="10dp"
            app:borderWidth="0dp"
            app:fabSize="normal"
            app:layout_constraintBottom_toTopOf="@+id/drawproject_fab"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/drawproject_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:backgroundTint="#ffffff"
            android:src="@drawable/android_project_create"
            android:visibility="invisible"
            app:borderWidth="0dp"
            app:fabSize="normal"
            app:layout_constraintBottom_toTopOf="@+id/main_optionmenu_floatingactionbutton"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/main_optionmenu_floatingactionbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/cardview_dark_background"
            android:src="@drawable/android_plus_sign"
            app:borderWidth="0dp"
            app:fabSize="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_relativelayout"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
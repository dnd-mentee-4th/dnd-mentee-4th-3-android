<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_user_constraintLayout"
    android:layout_width="122dp"
    android:layout_height="120dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/attentionimagepinkview"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/main_attention_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/circle_imageview"

        app:layout_constraintStart_toStartOf="@+id/main_user_constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/main_user_constraintLayout" />


    <TextView
        android:id="@+id/main_attentionmember_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="맛있는 햄버거"
        android:textColor="#000000"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/main_user_constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/main_user_constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/main_attention_imageview" />

    <TextView
        android:id="@+id/main_attentionproject_content_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:inputType="textMultiLine"
        android:text="두줄일 때는이렇게들어간다"
        android:textColor="#000000"
        android:textSize="10dp"

        app:layout_constraintEnd_toEndOf="@+id/main_user_constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/main_user_constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/main_attentionmember_title_textview" />

    <TextView
        android:id="@+id/main_attentionmemberitem_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🤖"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_attention_imageview"
        app:layout_constraintEnd_toEndOf="@+id/main_attention_imageview"
        app:layout_constraintStart_toStartOf="@+id/main_attention_imageview"
        app:layout_constraintTop_toTopOf="@+id/main_attention_imageview"
        app:layout_constraintVertical_bias="0.484"
        app:srcCompat="@drawable/bugger" />

</androidx.constraintlayout.widget.ConstraintLayout>
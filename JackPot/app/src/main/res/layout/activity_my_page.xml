<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.mypage.MyPage">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My_Page"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/mypage_profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mypage_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 : "
            android:textSize="30dp" />

        <TextView
            android:id="@+id/mypage_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름 : "
            android:textSize="30dp" />

        <TextView
            android:id="@+id/mypage_region_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역 : "
            android:textSize="30dp" />

        <TextView
            android:id="@+id/mypage_job_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="직업 : "
            android:textSize="30dp" />
    </LinearLayout>

    <Button
        android:id="@+id/mypage_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:text="로그인"
        android:textSize="45dp" />

    <Button
        android:id="@+id/mypage_logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:text="로그아웃"
        android:textSize="45dp" />

</LinearLayout>
